{
    "manifest_version": 3,
    "name": "Streamcompanion.app Extension",
    "version": "0.3",
    "description": "Streamcompanion for kick.com",
    "permissions": [],
    "host_permissions": [
        "https://kick.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://kick.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "cast.min.js",
                "runCastjs.js",
                "cast_white.svg"
            ],
            "matches": [
                "https://kick.com/*"
            ]
        }
    ],
    "icons": {
        "16": "favicon.png",
        "48": "favicon.png",
        "128": "favicon.png"
    }
}